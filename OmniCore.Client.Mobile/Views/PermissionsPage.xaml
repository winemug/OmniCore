<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:OmniCore.Client.Mobile.ViewModels"
             x:Class="OmniCore.Client.Mobile.Views.PermissionsPage"
             Title="PermissionsPage"
             x:DataType="viewModels:PermissionsViewModel">
    <VerticalStackLayout>
        <Label 
            Text="Permissions"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Bluetooth" Command="{Binding RequestBluetoothPermissionCommand}"
                IsEnabled="{Binding BluetoothPermissionRequired}"/>
        <Button Text="Foreground" Command="{Binding RequestForegroundPermissionCommand}"
                IsEnabled="{Binding ForegroundPermissionRequired}"/>
        <Button Text="Battery"  Command="{Binding RequestBatteryOptimizationExemptionCommand}"
                IsEnabled="{Binding RequestBatteryOptimizationExemptionRequired}"/>
        <Button Text="Data"  Command="{Binding RequestBackgroundDataExemptionCommand}"
                IsEnabled="{Binding BackgroundDataExemptionRequired}"/>
        <Button Text="Continue" Command="{Binding ContinueCommand}"/>
    </VerticalStackLayout>
</ContentPage>