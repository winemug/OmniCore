<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:OmniCore.Client.Mobile.ViewModels"
             x:Class="OmniCore.Client.Mobile.Views.AccountLoginPage"
             Title="AccountLoginPage"
             x:DataType="viewModels:AccountLoginViewModel">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Continue" Command="{Binding ContinueCommand}"/>
    </VerticalStackLayout>
</ContentPage>