<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmniCore.Maui.Views.TestPage">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="48">
            <Button Text="Stop" Command="{Binding StopCommand}" />
            <Button Text="New" Command="{Binding NewPodCommand}" />
            <Button Text="Prime" Command="{Binding PrimeCommand}" />
            <Button Text="Start" Command="{Binding StartCommand}" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>