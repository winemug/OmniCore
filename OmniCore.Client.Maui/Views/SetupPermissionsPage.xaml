<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:OmniCore.Maui.ViewModels"
             x:Class="OmniCore.Maui.Views.SetupPermissionsPage"
             x:DataType="viewModels:SetupPermissionsModel">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Label
                Text="Hello and Welcome\nPlease click the button below to grant permissions to the OmniCore application." />
            <Button Command="{Binding VerifyPermissionsCommand}" Text="Verify Permissions" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>