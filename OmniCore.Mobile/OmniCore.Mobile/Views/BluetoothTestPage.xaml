<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmniCore.Mobile.Views.BluetoothTestPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Start" Command="{Binding StartCommand}"></Button>
            <Button Text="Do" Command="{Binding DoCommand}"></Button>
            <Button Text="Copy" Command="{Binding CopyCommand}"></Button>
            <Label Text="Hello, blue world!"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
            <Button Text="Stop" Command="{Binding StopCommand}"></Button>
            <Label Text="{Binding RssiText}" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>